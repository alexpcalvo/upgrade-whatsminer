#!/bin/sh
#
# Usages:
#
# 1. test-readchipid             (Default device: /dev/ttyS2)
# 2. test-readchipid /dev/ttyS3
#

if [ "$1" = "" ]; then
    DEV="/dev/ttyS2"
else
    DEV=$1
fi

#
# Detect chip number according to hash board type
#
if [ -f /sys/class/hwmon/hwmon0/name ]; then
    name0=`cat /sys/class/hwmon/hwmon0/name`
fi
if [ -f /sys/class/hwmon/hwmon2/name ]; then
    name2=`cat /sys/class/hwmon/hwmon2/name`
fi
if [ -f /sys/class/hwmon/hwmon4/name ]; then
    name4=`cat /sys/class/hwmon/hwmon4/name`
fi

if [ "$name0" = "lm75" -o "$name2" = "lm75" -o "$name4" = "lm75" ]; then
    CHIP_NUM=38
else
    CHIP_NUM=66
fi

#
# Command usage:
#
# bitmicro-test <device> <baud> <times> <progress> <command>
#               <chip_num> <core_num> <fan_speed> <need_retry> <retry_times>

/bin/bitmicro-test $DEV 1000000 1 1 read_chip_model $CHIP_NUM 100 4500 1 10
